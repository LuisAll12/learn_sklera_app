{
    "manifest_version": 1,
    "name": "My Crypto App",
    "short_name": "Cryptona",
    "description": "Show crypto prices",
    "author": "Luis",
    "version": "1.0.4",
    "offline_enabled": true,
    "thumbnail": "Crypto-Wallpaper.jpg",
    "snapshot": "Crypto-Wallpaper.jpg",
    "config": [
      {
        "name": "coins",
        "label": "Anzuzeigende Coins",
        "type": "multiselect",
        "max_items": 4,
        "values": [
          "bitcoin",
          "ethereum",
          "solana",
          "dogecoin",
          "litecoin",
          "ripple",
          "cardano",
          "polkadot",
          "tron",
          "chainlink",
          "avalanche-2",
          "uniswap",
          "stellar",
          "near",
          "aptos",
          "optimism",
          "cosmos",
          "arbitrum",
          "hedera-hashgraph",
          "the-graph",
          "vechain",
          "algorand",
          "filecoin",
          "maker",
          "tezos",
          "aave",
          "sandbox",
          "decentraland",
          "axie-infinity",
          "chiliz"
        ],
        "default": ["bitcoin", "ethereum", "solana", "polkadot"]
      },
      {
        "name": "chartCoin",
        "label": "Coin für Chart",
        "type": "select",
        "values": [
          "bitcoin",
          "ethereum",
          "solana",
          "dogecoin",
          "litecoin",
          "ripple",
          "cardano",
          "polkadot",
          "tron",
          "chainlink",
          "avalanche-2",
          "uniswap",
          "stellar",
          "near",
          "aptos",
          "optimism",
          "cosmos",
          "arbitrum",
          "hedera-hashgraph",
          "the-graph",
          "vechain",
          "algorand",
          "filecoin",
          "maker",
          "tezos",
          "aave",
          "sandbox",
          "decentraland",
          "axie-infinity",
          "chiliz"
        ],
        "default": ["bitcoin"]
      },
      {
        "name": "currency",
        "label": "Währung",
        "type": "select",
        "values": ["eur", "usd", "chf"],
        "default": "eur"
      },
      {
        "name": "refreshInterval",
        "label": "Aktualisierung (Sekunden)",
        "type": "number",
        "default": 30
      },
      {
        "name": "showDetails",
        "label": "Detailansicht aktivieren",
        "type": "boolean",
        "default": true
      },
      {
        "name": "darkmode",
        "label": "Show Dark mode",
        "type": "boolean",
        "default": false
      }
    ]
}
